<% include ../partials/header.ejs %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-3 col-md-6">
          <h1><%= title %></h1>
            <form class="form" method="post">
              <div class="form-group">
                <label for="Question1TextField">Question1</label>
                <input type="text" class="form-control" id="Question1TextField"
                placeholder="Survey Question1" name="question1" value="<%= surveys.Question1 %>" required>
              </div>
              <div class="form-group">
                <label for="Question2TextField">Question2</label>
                <input type="text" class="form-control" id="Question2TextField"
                placeholder="Survey Question2" name="question2" value="<%= surveys.Question2 %>"  required>
              </div>
              <div class="form-group">
                <label for="Question3TextField">Question3</label>
                <input type="text" class="form-control" id="Question3TextField"
                placeholder="Survey Question3" name="question3" value="<%= surveys.Question3 %>"  required>
              </div>

              <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Submit</button>
              <a href="/surveys" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
            </form>
        </div>
      </div>
    </div>

<% include ../partials/footer.ejs %>
